{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skip": ["node_modules"],
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "#app": ["node_modules/nuxt/dist/app/index.mjs"]
    },
    "types": ["node", "nuxt/schema", "@nuxtjs/i18n"]
  },
  "include": [
    "app/**/*",
    ".nuxt/nuxt.d.ts"
  ]
}
